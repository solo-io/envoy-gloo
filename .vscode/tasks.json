{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "bazel build -c dbg //:envoy",
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "bazel test //:lambda_filter_integration_test",
            "problemMatcher":["$gcc"],
            "group": {
                "kind": "test"
            }
        }
    ]
}